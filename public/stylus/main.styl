navbarText = white

body
	text-align justify
	padding 60px 0 20px 0

.navbar
	.navbar-brand
		color navbarText

	.navbar-text
		color navbarText
		.avatar
			height 25px
		.log-out
			color navbarText
			&:hover
				color darken(navbarText, 30%)
				text-decoration none

.jumbotron
	padding-top 54px
	p
		width: 25em

	.next-event
		> div
			line-height 28px
			margin-bottom 12px

.main
	padding-bottom 48px

.right
	text-align right

.first-container
	padding-top 70px

.footer
	background-color #101010
	color navbarText

.call-for-proposals
	textarea
		width 100%
		height 100px


.avatar-wall
	list-style none
	margin 0
	padding 0

	> div
		margin 10px 0 

		img
			width 50px
			height 50px
			margin 0
			padding 0			
			border-radius 50%
