navbarText = white
beerJsBlue = #b2d1e7
chelaFont = 'Source Sans Pro', sans-serif

body
	text-align justify
	padding 60px 0 20px 0
	background darken(beerJsBlue, 20%)
	font-family: chelaFont

h1, h2, h3, h4, h5, h6, .h1, .h2, .h3, .h4, .h5, .h6
	font-family: chelaFont

.navbar
	background: beerJsBlue
	.navbar-brand

	.navbar-text
		color navbarText
		.avatar
			height 25px
		.log-out
			color navbarText
			&:hover
				color darken(navbarText, 30%)
				text-decoration none

.jumbotron
	padding-top 54px
	background: transparent
	font-weight: normal
	p
		max-width 25em

	.next-event
		> div
			line-height 28px
			margin-bottom 12px

.main
	padding-bottom 48px
	background white

.right
	text-align right

.first-container
	padding-top 70px

.footer
	background-color #101010
	color navbarText

.call-for-proposals
	textarea
		width 100%
		height 100px


.avatar-wall
	list-style none
	margin 0
	padding 0

	> div
		margin 10px 0 

		img
			width 50px
			height 50px
			margin 0
			padding 0			
			border-radius 50%
			border 1px solid

.reviews
	.review
		.avatar
			text-decoration: none;
			position: absolute;
			top: -4px;
			left: 0;

			img
				width 25px
				height 25px
				margin 0
				padding 0			
				border-radius 50%
				border 1px solid

		h6
			font-size 15px
			position: relative;
			padding-left: 30px;

.profile
	.bio
		textarea
			width 100%
			height 300px

